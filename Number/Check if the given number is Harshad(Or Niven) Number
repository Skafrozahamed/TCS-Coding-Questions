#include <iostream>

using namespace std;

int main()
{
  int num,sum=0;
  cout<< "Enter a number : ";
  cin>> num;
  int temp = num;

     while (num > 0) {
      
      int count = num % 10;
      
      sum = sum + count;
      
      num = num / 10;
   }
  if ((temp%sum) == 0)
  {
      cout<< temp << " is a Harshad number .";
  }
  else{
      cout<< temp << " is not a Harshad number .";
  }
    return 0;
}
