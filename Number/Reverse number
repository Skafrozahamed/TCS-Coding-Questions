#include <iostream>

using namespace std;

int main()
{
    int num,rev=0;
    cout<<"Enter a number : ";
    cin>>num;
    
    while (num > 0) {
      
      int count = num % 10;
      
      rev = rev * 10 + count;
      
      num = num / 10;
   }
   
   cout<<"The reverse number is "<<rev;

    return 0;
}
