#include <iostream>

using namespace std;

int main()
{
  int num;
  cout<< "Enter a number : ";
  cin>> num;
  int temp = num;

    int sum = 0;
  for (int i = 1; i <= num - 1; i++) {
    if (num % i == 0)
      sum = sum + i;
  }
  if (sum == num)
  {
      cout<< temp << " is a perfact number .";
  }
  else{
      cout<< temp << " is not a perfact number .";
  }
    return 0;
}
