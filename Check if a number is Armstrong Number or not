#include <iostream>

using namespace std;

 int main()    
{    
int n,r,sum=0,temp;    
cout<< "enter the number : ";    
cin>>n ;    
temp=n;    
while(n>0)    
{    
r=n%10;    
sum=sum+(r*r*r);    
n=n/10;    
}    
if(temp==sum)    
cout<< "Yes, it is an Armstrong Number ";    
else    
cout<< "No, it is not an Armstrong Number";    

    return 0;
}
